@{
  Layout = "_Layout";     
}

@using ToDoList.Models

<h1>Tags</h1>

@if (Model.Count == 0)
{
    <p>No tags yet.</p>
}

@foreach (Tag tag in Model)
{
  <li>@Html.ActionLink($"{tag.Title}", "Details", new { id = tag.TagId }) </li>
}


  
  
<p>@Html.ActionLink("Add new tag", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
